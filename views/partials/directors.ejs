<% let k = 1;
directorStat.forEach((value, key, map)=> {
  %>
  <p style='margin:0; padding:3px; border:1px solid #444'>
    <%= k %>.
    <a href="/?filtermode=<%= FilmMode.DIRECTOR %>&filtervalue=<%= key %>">filter</a> <b><a href="person/<%= key %>"><%= value.name %></b></a> < <%= value.rating %> > | <%= value.quantity %>
    </p>
    <% k++;

  }); %>

  <script>
    document.querySelector("a[href*='/?sortdirector=<%= sortdirectormode %>']").classList.add("sortselected");
  </script>