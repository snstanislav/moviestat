<a href="/?sortdirector=<%= SortMode.RATING_ASC %>">Rating up</a> |
<a href="/?sortdirector=<%= SortMode.RATING_DESC %>">Rating down</a> |
<a href="/?sortdirector=<%= SortMode.QUANTITY_ASC %>">Quantity up</a> |
<a href="/?sortdirector=<%= SortMode.QUANTITY_DESC %>">Quantity down</a> |
