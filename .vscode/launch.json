{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/server/app.js",
            "cwd": "${workspaceFolder}/server",
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "integratedTerminal",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Vue Client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client",
            "breakOnLoad": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceFolder}/server/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "DEBUG Client + Server",
            "configurations": ["Launch Server", "Launch Vue Client"]
        }
    ]
}